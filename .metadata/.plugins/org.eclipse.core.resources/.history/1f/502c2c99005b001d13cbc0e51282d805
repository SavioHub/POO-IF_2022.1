	public void senioridade() {
		
		if(getSalario() <=2000) {
			setSalarioMinimo(1212);
			System.out.println("Você é um dev junior!");
			System.out.println("Seu salário é de no máximo "+getSalarioMinimo());
			
		}else if(getSalario() > 2000 && getSalario() <= 3000) {
			setSalarioMinimo(2000);
			System.out.println("Você é um dev Pleno!");
			System.out.println("Seu salário é de no minimo "+getSalarioMinimo());
		
		}else if(getSalario() > 3000) {
			setSalarioMinimo(3000);
			System.out.println("Você é um dev Senior!");
			System.out.println("Seu salário é de no minimo "+getSalarioMinimo());
		}else {
			System.out.println("Algo de errado, tente novamente");
			informarSalario();
			senioridade();
			return;
		}
	}
}
