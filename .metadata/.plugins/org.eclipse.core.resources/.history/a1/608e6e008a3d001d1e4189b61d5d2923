package sisteminha;

import java.util.Scanner;

public class Sistema {
	public static Scanner scan = new Scanner(System.in);

	public static int tam = 50; //var que indica o tamando dos vetores 
	public static int aux = 0;
    public static int ver[] = new int[tam]; //vetor de verificação
    public static String nome[] = new String[30]; //vetor que armazena o nome
    
    public static int CadastrarCliente(int qtdCliente, int cadastroCliente) {
        for (int i = qtdCliente; i < nome.length; i++) {
            System.out.println("Informe o nome do cliente para o cadastro:");
            nome[i] = scan.nextLine();
            nome[i] = scan.nextLine();
            ver[i] = 1; //informa que esta entrada está ativa
            cadastroCliente+=1; //conta a qtd de aluno
            break;
        }
        return (cadastroCliente);
    } 

    public static void ConsultarClientes(int ver[]) {
        for (int i = 0; i < nome.length; i++) {
            if (ver[i] == 1) {
            	System.out.println("ID:1 Cliente:"+nome[i]);    
            } 
        }
    }
    
	public static void menu() {
		System.out.println("------------ Menu-----------\n");
		System.out.println("1 - Mostrar produtos em estoque");
		System.out.println("2 - Mostrar clientes");
		System.out.println("3 - Cadastrar novo cliente");
		System.out.println("4 - Mostrar dinheiro em caixa");
		System.out.println("5 - vender produtos");
		System.out.println("6 - sair");
		System.out.println("------------------------------\n");
		System.out.println("O que deseja fazer?");
		System.out.println("Escolha:");
	}
	
	public static void main(String[] args) {
		int op = 0; //var do menu
		int cadastroCliente = 0; //var usada para indicar o novo cadastro
        int cliente = 0; //var usada para armazenar a qtd de cliente
        
        //estoque de produtos
		String produtos[] = {"arroz", "feijão", "carne", "frango", "açucar"};
		double preco[] = {5.90, 8.50, 35.90, 13.50, 5.50, 8.80};
		
		//variaveis de login
//		String user;
		int pass;
		
		System.out.println("-----Login-----");
//		System.out.println("nome de usuário");
//		user = scan.nextLine();
//		user = scan.nextLine();

		System.out.println("senha de login");
		pass = scan.nextInt();
		
		do {
			if (pass == 123) {
				menu();
			
				op = scan.nextInt();
				
				switch (op) {
				case 1:
					System.out.println("Produto:"+produtos[0]+" - Preço: R$"+preco[0]+"- Qtd em estoque: 40");
					System.out.println("produto:"+produtos[1]+" - Preço: R$"+preco[1]+" - Qtd em estoque: 45");
					System.out.println("produto:"+produtos[2]+"- Preço: R$"+preco[2]+" - Qtd em estoque: 60");
					System.out.println("produto:"+produtos[3]+" - preço: R$"+preco[3]+" - Qtd em estoque: 48");
					System.out.println("produto:"+produtos[4]+" - preço: R$"+preco[4]+"- Qtd em estoque: 50\n");
					System.out.println("Pressione 0 para sair do programa ou 1 para abrir Menu");
					System.out.println("Escolha:");
					op = scan.nextInt();
					if(op==0) {
						System.out.println("Saiu!!");
						break;
					}
					break;
					
				case 2:
					System.out.println("------- Clientes -------");
					
					ConsultarClientes(ver); //função consultar
					
					System.out.println("Pressione 0 para sair do programa ou 1 para abrir Menu");
					System.out.println("Escolha:");
					op = scan.nextInt();
					if(op==0) {
						System.out.println("Saiu!!");
						break;
					}
					break;
					
				case 3:
					cliente = CadastrarCliente(cliente, cadastroCliente); //função cadastrar - retornando cadastroCliente
					cadastroCliente += 1; //preserva o aluno cadastrado anteriormente
					if(cliente>0) {
						System.out.println("Cliente cadastrado!\n");
					}
					
					System.out.println("Pressione 0 para sair do programa ou qualquer numero para abrir Menu");
					System.out.println("Escolha:");
					op = scan.nextInt();
					if(op==0) {
						System.out.println("Saiu do sistema!");
						break;
					}
					
					break;

				case 4:
					System.out.println("dinheiro em caixa\n");
					System.out.println("Pressione 0 para sair do programa ou qualquer numero para abrir Menu");
					System.out.println("Escolha:");
					op = scan.nextInt();
					if(op==0) {
						System.out.println("Saiu!!");
						break;
					}else 
						
					break;
				case 5:
					System.out.println("Vender produtos\n");
					
					System.out.println("Pressione 0 para sair do programa ou qualquer numero para abrir Menu");
					System.out.println("Escolha:");
					op = scan.nextInt();
					if(op==0) {
						System.out.println("Saiu!!");
						break;
					}
					
					break;
				default:
                    System.out.println("Saiu!!!");
                    break;
		
				}
				
//				break;//break do while
			}
		} while (op !=5);
		
		
		
	}

}
