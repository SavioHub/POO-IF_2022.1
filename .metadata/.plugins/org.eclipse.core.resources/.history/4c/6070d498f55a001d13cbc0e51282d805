	    public ContaPoupanca() {  
	    	setNumAgencia("00001");
	        setNumConta("43435-7");
	    }
	    
	    
	    public void depositar(double valorDeposito) {
	    	double depositar;
	        this.saldo += valorDeposito;
	        depositar = valorDeposito;
	        System.out.println("Valor depositado:"+depositar);
	    }

	    public void sacar(double valorSaque) {
	    	double saque;
	        if (this.saldo >= valorSaque) {
	            this.saldo -= valorSaque;
	            saque = valorSaque;
	            System.out.println("Valor de saque:"+saque);
	        } else {
	            System.out.println("Não há saldo para sacar!");
	        }
	    }

	    public double valorSaldo() {
	    	System.out.println("Valor de saldo atual:"+this.saldo);
	    	return this.saldo;
	    }
	}
	    
